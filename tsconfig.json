{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@client": [
        "client/index.ts"
      ],
      "@client/*": [
        "client/*"
      ],
      "@modules": [
        "modules/index.ts"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@sdk": [
        "sdk/index.ts"
      ],
      "@sdk/*": [
        "sdk/*"
      ],
      "@types": [
        "types/index.ts"
      ],
      "@types/*": [
        "types/*"
      ],
      "@utils": [
        "utils/index.ts"
      ],
      "@utils/*": [
        "utils/*"
      ]
    },
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "examples",
    "coverage"
  ]
}
